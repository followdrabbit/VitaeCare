{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "vitaecare-main",
  "description": "Core básico + diálogos (abrir/salvar) para a janela main",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",

    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message"
  ]
}
